---
import Section from "@/components/Section.astro";
import { projects } from "@cv";

let firstThreeProjects = [];
if (projects.length > 2) {
  firstThreeProjects.push(projects[0]);
  firstThreeProjects.push(projects[1]);
  firstThreeProjects.push(projects[2]);
} else {
  firstThreeProjects = projects;
}
---

<Section title="Projects">
  <ul>
    {
      firstThreeProjects.map(
        ({ name, isActive, description, highlights, url }) => (
          <li>
            <article>
              <header>
                <h3>
                  <a href={url} title={`Go to the project ${name}`}>
                    {name}
                  </a>
                  {isActive && <span>&bull;</span>}
                </h3>
                <p>{description}</p>
              </header>
              <footer>
                {highlights.map((highlight) => (
                  <span>{highlight}</span>
                ))}
              </footer>
            </article>
          </li>
        )
      )
    }
  </ul>

  <div class="print more-projects">
    <a href="/projects" title="Go to full projects list">
      More projects at: https:relisalazar.com/projects
    </a>
  </div>

  <div class="no-print more-projects">
    <a href="/projects" title="Go to full projects list">
      see more projects
      <svg
        width="16"
        height="16"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"
        ><path stroke="none" d="M0 0h24v24H0z" fill="none"></path><path
          d="M5 12l14 0"></path><path d="M15 16l4 -4"></path><path d="M15 8l4 4"
        ></path></svg
      >
    </a>
  </div>
</Section>

<style>
  ul {
    display: grid;
    gap: 1rem;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    margin-inline: -16px;
  }

  article {
    border-radius: 6px;
    border: 1px solid #f2f2f2;
    gap: 16px;
    display: flex;
    flex-direction: column;
    padding: 16px;
    height: 100%;
  }

  article header {
    flex: 1;
  }

  article h3 {
    margin-bottom: 4px;
  }

  article h3 span {
    color: rgb(34, 197, 94);
  }

  article a {
    color: #111;
  }

  article p {
    font-size: 0.75rem;
    line-height: 1.2rem;
    margin-bottom: 4px;
  }

  article a:hover {
    text-decoration: underline;
    text-decoration-color: var(--accent-color);
    text-decoration-thickness: 2px;
  }

  .more-projects {
    display: flex;
    padding-block: 8px;
    margin-inline: -16px;
  }

  .more-projects a {
    font-size: 0.75rem;
    display: flex;
    align-items: center;
    gap: 6px;
    border: 1px solid #eee;
    border-radius: 6px;
    padding: 2px 8px;
    color: #444;
    transition:
      border 0.3s ease,
      color 0.3s ease;
  }

  .more-projects a:hover {
    border-color: var(--accent-color);
    color: var(--accent-color-dark);
  }

  footer {
    display: flex;
    flex-wrap: wrap;
    gap: 4px;
    font-size: 0.6rem;
  }

  footer span {
    border-radius: 6px;
    background-color: #eee;
    color: #444;
    font-size: 0.6rem;
    font-weight: 500;
    padding: 0.2rem 0.6rem;
  }
</style>
