---
import Layout from "@/layouts/Layout.astro";
import Section from "@/components/Section.astro";

interface Props {
  title: string;
  header?: string;
}

const { title, header } = Astro.props;
---

<Layout title={`<Î» ${title} />`}>
  <main>
    <Section>
      {header && <img class="header-img" src={header} alt="" />}

      <h1>{title}</h1>

      <div class="content">
        <slot />
      </div>
    </Section>
  </main>
</Layout>

<style is:global>
  main {
    padding: 4rem;
    margin: auto;
    width: 100%;
  }

  .header-img {
    width: 100%;
    height: auto;
  }

  h1 {
    text-decoration: underline;
    text-decoration-color: var(--accent-color);
    text-decoration-thickness: 4px;
    margin-bottom: 8px;
    font-weight: 700;
    line-height: 1.5;
    font-size: 2rem;
  }

  .content {
    display: flex;
    flex-direction: column;
    gap: 12px;
  }

  p.note {
    border: 1px solid var(--accent-color);
    border-left: 4px solid var(--accent-color);
    padding: 2px 6px;
    color: #777;
  }

  .content a {
    color: #555;
    text-decoration: underline;
    text-decoration-color: var(--accent-color);
    text-decoration-thickness: 2px;
    font-weight: 700;
    transition: color 0.3s ease;
  }
  .content a:hover {
    color: #222;
  }
</style>
