---
import Layout from "@/layouts/Layout.astro";
import Section from "@/components/Section.astro";

interface Props {
  title: string;
  headerName?: string;
}

const { title, headerName } = Astro.props;
---

<Layout title={`<Î» ${title} />`}>
  <main>
    <Section>
      {headerName && <img class="header-img" src={`/public/projects/${headerName}/header.png`} alt="" />}

      <h1>{title}</h1>

      <slot />
    </Section>
  </main>
</Layout>

