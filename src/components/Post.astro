---
import Layout from "@/layouts/Layout.astro";
import Section from "@/components/Section.astro";

interface Props {
  title: string;
  header?: string;
  publishDate: string;
  lastEditDate?: string;
}

const { title, header, publishDate, lastEditDate } = Astro.props;

const getFormatedDate = (dateToFormat: string) => {
  const date = new Date(dateToFormat);
  const month = date.toLocaleDateString("default", { month: "short" });
  const day = date.getDate();
  const year = date.getFullYear();
  const formatedDate = `${month} ${day}, ${year}`;
  return formatedDate;
};

const publish = getFormatedDate(publishDate);
const lastEdit = lastEditDate ? getFormatedDate(lastEditDate) : "";
---

<Layout title={`<Î» ${title} />`}>
  <main>
    <Section>
      {header && <img class="header-img" src={header} alt="" />}

      <h1>{title}</h1>

      {
        (
          <div class="dates">
            <div class="date">
              <p>date:</p>
              <time>{publish}</time>
            </div>

            {lastEdit && (
              <div class="date">
                <p>last edit:</p>
                <time>{lastEdit}</time>
              </div>
            )}
          </div>
        )
      }

      <div class="content">
        <slot />
      </div>
    </Section>
  </main>
</Layout>

<style is:global>
  main {
    padding: 4rem 2rem;
    margin: auto;
    width: 100%;
  }

  .header-img {
    width: 100%;
    height: auto;
  }

  h1 {
    text-decoration: underline;
    text-decoration-color: var(--accent-color);
    text-decoration-thickness: 4px;
    margin-bottom: 8px;
    font-weight: 700;
    line-height: 1.5;
    font-size: 2rem;
  }

  h2 {
    text-decoration: underline;
    text-decoration-color: var(--accent-color);
    text-decoration-thickness: 4px;
    margin-bottom: 8px;
    font-weight: 700;
    line-height: 1.5;
    font-size: 1.5rem;
  }

  .dates {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 8px;
    padding-bottom: 12px;
    flex-wrap: wrap;
  }

  .date {
    display: flex;
    align-items: center;
    gap: 8px;
  }

  .date p {
    line-height: 1.2;
    font-size: 0.75rem;
    color: #777;
  }

  time {
    font-size: 0.75rem;
    color: #777;
  }

  .content {
    display: flex;
    flex-direction: column;
    gap: 12px;
  }

  span {
    font-size: 0.75rem;
    color: #777;
  }

  p.note {
    border: 1px solid var(--accent-color);
    border-left: 4px solid var(--accent-color);
    padding: 2px 6px;
    color: #777;
  }

  .content a {
    color: #555;
    text-decoration: underline;
    text-decoration-color: var(--accent-color);
    text-decoration-thickness: 2px;
    font-weight: 700;
    transition: color 0.3s ease;
  }
  .content a:hover {
    color: #222;
  }
</style>
