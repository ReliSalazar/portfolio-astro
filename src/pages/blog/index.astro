---
import Layout from "@/layouts/Layout.astro";
import Section from "@/components/Section.astro";
import { entries } from "@cv";
---

<Layout title="<Î» Projects />">
  <main>
    <Section>
      <ul>
        {
          entries.map(({ title, content, tags, url }) => (
            <li>
              <article>
                <header>
                  <h3>
                    <a href={url} title={`Go to the blog post ${title}`}>
                      {title}
                    </a>
                  </h3>
                  <p>{content}</p>
                </header>
                <footer>
                  {tags.map((tag) => (
                    <span>{tag}</span>
                  ))}
                </footer>
              </article>
            </li>
          ))
        }
      </ul>
    </Section>
  </main>
</Layout>

<style>
  main {
    padding: 4rem 2rem;
    margin: auto;
    width: 100%;
  }

  ul {
    display: grid;
    gap: 1rem;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    margin-inline: -16px;
  }

  article {
    border-radius: 6px;
    border: 1px solid #f2f2f2;
    gap: 16px;
    display: flex;
    flex-direction: column;
    padding: 16px;
    height: 100%;
  }

  article header {
    flex: 1;
  }

  article h3 {
    margin-bottom: 4px;
  }

  article a {
    color: #111;
  }

  article p {
    font-size: 0.75rem;
    line-height: 1.2rem;
    margin-bottom: 4px;
  }

  article a:hover {
    text-decoration: underline;
    text-decoration-color: var(--accent-color);
    text-decoration-thickness: 2px;
  }

  footer {
    display: flex;
    flex-wrap: wrap;
    gap: 4px;
    font-size: 0.6rem;
  }

  footer span {
    border-radius: 6px;
    background-color: #eee;
    color: #444;
    font-size: 0.6rem;
    font-weight: 500;
    padding: 0.2rem 0.6rem;
  }
</style>
